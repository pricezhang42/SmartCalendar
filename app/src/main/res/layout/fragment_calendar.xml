<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.calendar.CalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Month View Container with ViewPager2 for swipe -->
        <LinearLayout
            android:id="@+id/monthViewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Weekday headers -->
            <LinearLayout
                android:id="@+id/weekdayHeaderRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:paddingHorizontal="4dp"
                android:background="@android:color/white">
                <!-- Weekday labels added programmatically -->
            </LinearLayout>

            <!-- ViewPager2 for swipe between months -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/monthViewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/white" />

        </LinearLayout>

        <!-- Week View Container with ViewPager2 for swipe -->
        <LinearLayout
            android:id="@+id/weekViewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Week Header -->
            <LinearLayout
                android:id="@+id/weekHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/weekLabel"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray"
                    tools:text="Week\n3" />

                <LinearLayout
                    android:id="@+id/weekDaysContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" />

            </LinearLayout>

            <!-- Week grid with fixed time labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Fixed time labels column (stays still when swiping) -->
                <ScrollView
                    android:id="@+id/fixedTimeLabelsScroll"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/fixedTimeLabelsColumn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/white" />

                </ScrollView>

                <!-- ViewPager2 for swipe between weeks (only day columns) -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/weekViewPager"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
