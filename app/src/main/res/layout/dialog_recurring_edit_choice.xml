<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit recurring event"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/editChoiceGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/optionThisEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This event"
            android:textSize="16sp"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/optionThisAndFollowing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This and following events"
            android:textSize="16sp"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/optionAllEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All events"
            android:textSize="16sp"
            android:padding="8dp" />

    </RadioGroup>

</LinearLayout>
